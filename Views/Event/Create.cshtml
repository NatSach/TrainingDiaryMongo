@model TrainigDiaryMongo.Models.CreateEventViewModel


<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewEvent.EventName" class="control-label"></label>
                <input asp-for="NewEvent.EventName" class="form-control" />
                <span asp-validation-for="NewEvent.EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEvent.Location" class="control-label"></label>
                <input asp-for="NewEvent.Location" class="form-control" />
                <span asp-validation-for="NewEvent.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEvent.StartDate" class="control-label"></label>
                <input asp-for="NewEvent.StartDate" class="form-control" />
                <span asp-validation-for="NewEvent.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEvent.EndDate" class="control-label"></label>
                <input asp-for="NewEvent.EndDate" class="form-control" />
                <span asp-validation-for="NewEvent.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEvent.Type" class="control-label"></label>
                <select asp-for="NewEvent.Type" asp-items="@Model.EventTypes" class="form-control"></select>
                <span asp-validation-for="NewEvent.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEvent.Description" class="control-label"></label>
                <textarea asp-for="NewEvent.Description" rows="3" class="form-control"></textarea>
                <span asp-validation-for="NewEvent.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create event" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>